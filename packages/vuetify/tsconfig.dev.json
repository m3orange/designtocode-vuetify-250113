{
  "extends": "./tsconfig.json",
  "include": [
    "src",
    "dev",
    "test",
    "cypress",
    "cypress.config.ts",
    "vite.config.mts",
    "vitest.config.mts",
    "vitest.workspace.mts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "@test": ["test/index.ts"]
    },
    "types": [
      "@vitest/browser/providers/webdriverio"
    ]
  },
  "vueCompilerOptions": {
    "strictTemplates": true
  }
}
