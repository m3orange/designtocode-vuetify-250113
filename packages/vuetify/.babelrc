{
  "presets": [
    "@vue/babel-preset-jsx",
    ["@babel/preset-env", {
      "targets": {
        "browsers": [">0.5%", "last 2 versions", "not dead", "not op_mini all"],
        "node": 8
      },
      "modules": false
    }]
  ],
  "plugins": ["@babel/plugin-syntax-jsx"],
  "env": {
    "test": {
      "presets": [
        ["env", {
          "targets": { "node": true }
        }]
      ],
      "plugins": [
        ["module-resolver", {
          "root": ["./src"],
          "alias": {
            "~components": "components",
            "~directives": "directives",
            "~mixins": "mixins",
            "~stylus": "stylus",
            "~scss": "scss",
            "~util": "util"
          }
        }]
      ]
    },
    "es5": {
      "presets": [
        ["env", {
          "targets": {
            "browsers": [">0.5%", "last 2 versions", "not dead", "not op_mini all"],
            "node": 8
          }
        }]
      ],
      "plugins": [
        "./build/babel-transform-stylus-paths.js"
      ]
    },
    "lib": {
      "plugins": [
        "./build/babel-transform-stylus-paths.js"
      ]
    }
  }
}
