{
  "extends": "../../tsconfig.json",
  "include": [
    "src",
    "dev",
  ],
  "exclude": ["**/*.spec.cy.ts", "**/*.spec.cy.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test": ["test/index.ts"]
    },
    "types": [
      "node",
      "vue-router"
    ],
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "skipLibCheck": false
  }
}
