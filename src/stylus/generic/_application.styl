.application
  -webkit-backface-visibility: hidden
  min-height: 100vh

  > main > .container
    min-height: 100vh

  &--toolbar
    > main > .container
      min-height: 'calc(100vh - %s)' % $toolbar-height

    &.application--footer
      > main > .container
        min-height: 'calc(100vh - %s - %s)' % ($toolbar-height $footer-height)

  &--toolbar-dense
    > main > .container
      min-height: 'calc(100vh - %s)' % $toolbar-mobile-landscape-height

    &.application--footer
      > main > .container
        min-height: 'calc(100vh - %s - %s)' % ($toolbar-mobile-landscape-height $footer-height)

    > aside.navigation-drawer.navigation-drawer--clipped
      &.navigation-drawer--permanent, &.navigation-drawer--persistent
        margin-top: $toolbar-mobile-landscape-height
        max-height: "calc(100vh - %s)" % $toolbar-mobile-landscape-height

  &--footer
    > main > .container
      min-height: 'calc(100vh - %s)' % $footer-height

  &--footer-fixed
    > aside.navigation-drawer
      max-height: 'calc(100vh - %s)' % $footer-height

    > main
      padding-bottom: $footer-height

    &.application--toolbar
      > aside.navigation-drawer.navigation-drawer--clipped
        max-height: 'calc(100vh - %s - %s)' % ($toolbar-height $footer-height)

    &.application--toolbar-dense
      > aside.navigation-drawer.navigation-drawer--clipped
        margin-top: $toolbar-mobile-landscape-height
        max-height: 'calc(100vh - %s - %s)' % ($toolbar-mobile-landscape-height $footer-height)

// Main theme
.application
  &--light
    application($material-light)

  &--dark
    application($material-dark)

  .theme--light
    text($material-light, $material-dark)

  .theme--dark
    text($material-dark, $material-light)