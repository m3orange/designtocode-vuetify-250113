@import '../bootstrap'
@import '../theme'

selects($material)
  &.v-input-group
    &--editable,
    &--overflow,
    &--segmented
      .v-input-group__input:hover
        background: $material.cards

      &.v-input-group--focused .v-input-group__input
        background: $material.cards

theme(selects, "v-input-group--select")

.v-input-group--select
  // TODO: revisit this
  .v-input-group--select__autocomplete
    display: block
    height: 0px

    &--index
      background-color: transparent !important

  .v-input-group__append-icon
    transition: .3s $transition.linear-out-slow-in

    &.v-input-group__icon-clearable
      transition: none

  &:not(.v-input-group--dirty),
  &.v-input-group--focused
    .v-input-group--select__autocomplete
      padding-bottom: 1px
      height: 30px

  &.v-input-group--focused
    .v-input-group--select__autocomplete
      display: inline-block
      opacity: 1

    &.v-input-group--select--selecting-index
      .v-input-group--select__autocomplete
        opacity: 0

    &.v-input-group--open
      .v-input-group__append-icon:not(.v-input-group__icon-clearable)
        transform: rotate(-180deg)

  .v-input-group__input
    cursor: pointer

  &.v-input-group--disabled
    cursor: default
    pointer-events: none

.v-input-group--select
  .v-input-group__selections
    align-items: center
    display: flex
    flex-wrap: wrap
    position: relative
    width: 100%

    &__comma
      display: inline-flex
      font-size: $input-font-size
      padding: 3px 4px 3px 0

      &--active
        color: inherit

  .menu
    display: inline

  .fade-transition-leave-active
    position: absolute
    left: 0

  &.v-input-group--autocomplete.v-input-group--search-focused
    .v-input-group__selections__comma
      display: none

.v-input-group--autocomplete
  .v-input-group__selections
    cursor: text


.v-input-group
  &.v-input-group--chips
    .v-input-group__input
      padding-top: 0
      padding-bottom: 0

  &.v-input-group--overflow,
  &.v-input-group--editable,
  &.v-input-group--segmented
    padding: 0

    .v-input-group__append-icon
      padding: 0

    .v-input-group__selections,
    input
      height: 48px

    // Handle weird transition issue
    .v-input-group__selections__comma, input
      top: 0
      left: 0
      padding-left: 16px

    .v-input-group__selections
      width: calc(100% - 55px)

      .v-btn
        border-radius: 0
        margin: 0
        height: 48px
        width: 100%

        .v-btn__content
          justify-content: start

    .v-input-group__input
      transition: .3s $transition.swing

    &.v-input-group--focused
      .v-input-group__input
        elevation(8)

    label
      left: 16px !important
      top: 9px !important

    .v-input-group__details
      &:after
        display: none

    .v-input-group__input
      padding: 0

      &:before
        content: ''
        position: absolute
        left: 0
        width: 100%
        height: 1px
        top: 0
        transition: .3s $transition.swing

    .v-input-group__append-icon
      width: 55px

  &--segmented .v-input-group__input,
  &--editable .v-input-group__input:hover,
  &.v-input-group--focused.v-input-group--editable .v-input-group__input
    &:after
      background-color: rgba(0,0,0,0.12)
      content: ''
      position: absolute
      right: 55px
      height: 48px
      top: 0
      width: 1px

.menu__content--select
  // // IE11 Fix for overflow
  .v-input-group--selection-controls__ripple
    display: none

.menu__content--autocomplete
    border-radius: 0

    > .card
      border-radius: 0
