.overlay
  align-items: center
  display: flex
  justify-content: center
  pointer-events: none
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  z-index: 1000

  &--absolute
    position: absolute

  &:before
    background-color: rgba(33, 33, 33, 1)
    bottom: 0
    content: ''
    filter: blur(10%)
    left: 0
    opacity: 0
    position: absolute
    right: 0
    top: 0
    transition: $primary-transition
    height: 100vh
    width: 100vw

  &--active
    pointer-events: auto

    &:before
      opacity: .46
