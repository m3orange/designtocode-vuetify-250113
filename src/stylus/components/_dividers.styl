@import '../bootstrap'

.v-divider
  border: none
  display: block
  height: 1px
  flex: 1 1
  min-height: 1px
  width: 100%
  background-color: var(--vuetify-dividers-color)

  &--inset:not(.v-divider--vertical)
    margin-left: 72px
    width: calc(100% - 72px)

  &--vertical
    flex: 0 1 auto
    height: 100%
    width: 1px

    &.v-divider--inset
      height: calc(100% - 16px)
