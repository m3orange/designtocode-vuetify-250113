@import '../bootstrap'

.snack
  position: fixed
  display: flex
  z-index: 1000
  width: 100%
  pointer-events: none
  visibility: visible
  background-color: $snackbar-background-color
  transition: all .4s $transition.swing

  &--absolute
    position: absolute

  &--top, &--bottom
    transform: translate(-50%, 0)

    &.v-enter
      .snack__content
        opacity: 0

    &.v-enter-to, &.v-leave
      transform: translate(-50%, 0)

      .snack__content
        opacity: 1

  &--top
    top: 0
    left: 50%

    &.v-enter, &.v-leave-to
      transform: translate(-50%, -100%)

  &--bottom
    bottom: 0
    left: 50%

    &.v-enter, &.v-leave-to
      transform: translate(-50%, 100%)

  &__content
    background-color: inherit
    padding: 14px 24px
    pointer-events: auto
    width: 100%
    height: 48px
    align-items: center
    color: $snackbar-color
    display: flex
    font-size: 14px
    justify-content: space-between
    position: relative !important
    transition: opacity .4s linear
    opacity: 1
    elevation(6)

    .snack__action
      min-width: auto

    .btn
      color: $snackbar-color
      margin: 0 0 0 24px
      
      &__content
        padding: 0 !important
        
        &::before
          display: none

  &--multi-line &__content
    height: 80px
    padding: 24px

  &--vertical &__content
    height: 112px
    padding: 24px 24px 14px
    flex-direction: column
    align-items: initial

    .btn
      align-self: flex-end

@media $display-breakpoints.sm-and-up
  .snack
    width: auto

    &--left, &--right
      transform: translate(0, 0)

    &--top
      &.snack--left, &.snack--right
        &.v-enter, &.v-leave-to
          top: 0
          transform: translate(0, -100%)
        &.v-enter-to, &.v-leave
          top: $snackbar-corner-offset
          transform: translate(0, 0)

      &.snack--left
        top: $snackbar-corner-offset
        left: $snackbar-corner-offset
        right: initial
        
      &.snack--right
        top: $snackbar-corner-offset
        right: $snackbar-corner-offset
        left: initial

    &--bottom
      &.snack--left, &.snack--right
        &.v-enter, &.v-leave-to
          bottom: 0
          transform: translate(0, 100%)
        &.v-enter-to, &.v-leave
          bottom: $snackbar-corner-offset
          transform: translate(0, 0)

      &.snack--left
        bottom: $snackbar-corner-offset
        left: $snackbar-corner-offset
        right: initial
        
      &.snack--right
        bottom: $snackbar-corner-offset
        right: $snackbar-corner-offset
        left: initial

    &__content
      border-radius: 2px
      max-width: 568px
      min-width: 288px

      .btn
        margin: 0 0 0 48px
