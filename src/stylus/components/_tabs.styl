@import '../bootstrap'
@import '../theme'

/* Theme */
tabs__bar($material)
  background-color: $material.cards

  .icon--left,
  .icon--right
    color: $material.icons.inactive

  .tabs__div
    color: $material.tabs.active

    &.tabs__item--disabled
      color: $material.buttons.disabled

theme(tabs__bar, "tabs__bar")

.tabs
  position: relative

  .icon--prepend,
  .icon--append
    position: absolute
    top: 0
    width: 32px
    align-items: center
    cursor: pointer
    user-select: none

    &.icon--disabled
      pointer-events: none

  .icon--prepend
    left: 4px

  .icon--append
    right: 4px

  &--show-arrows
    .tabs__wrapper
      margin-left: 40px
      margin-right: 40px

  &--overflow
    .tabs__div
      flex: 1 0 auto

  &--align-with-title
    .tabs__container
      padding-left: 16px

      @media $display-breakpoints.xs-only
        padding-left: 24px

  &--fixed-tabs,
  &--icons-and-text
    .tabs__div
      min-width: 160px

  &--fixed-tabs,
  &--icons-and-text,
  &--centered
    @media $display-breakpoints.xs-only
      .tabs__div
        min-width: 72px

  &--fixed-tabs
    .tabs__div
      @media $display-breakpoints.xs-only
        flex: 1 0 auto

  &--centered,
  &--fixed-tabs,
  &--right
    .tabs__container
      > div:first-child
        margin-left: auto

      .tabs__slider-wrapper + .tabs__div
        margin-left: auto

  &--centered,
  &--fixed-tabs
    .tabs__container
      > div:last-child
        margin-right: auto

  &--grow
    .tabs__div
      flex: 1 0 auto
      max-width: none

  &--icons-and-text
    .tabs__item
      flex-direction: column-reverse

      .icon
        margin-bottom: 6px

.tabs__wrapper
  overflow: hidden
  display: flex

.tabs__container
  flex: 0 0 auto
  display: flex
  list-style-type: none
  transition: transform 0.6s cubic-bezier(0.86, 0, 0.07, 1)
  white-space: nowrap
  position: relative
  will-change: transform

.tabs__div
  align-items: center
  display: inline-flex
  flex: 0 1 auto
  height: inherit
  max-width: 264px
  vertical-align: middle

.tabs__item
  align-items: center
  color: inherit
  display: flex
  flex: 1 1
  flex-basis: 264px
  font-size: 14px
  font-weight: 500
  height: 100%
  justify-content: center
  line-height: normal
  max-width: inherit
  padding: 6px 12px
  text-align: center
  text-decoration: none
  text-transform: uppercase
  transition: $primary-transition
  user-select: none
  white-space: normal

  &:not(.tabs__item--active)
    opacity: .7

.tabs__slider
  height: 2px
  width: 100%

  &-wrapper
    bottom: 0
    margin: 0 !important
    position: absolute
    transition: $primary-transition

.tabs__items
  overflow: hidden
  position: relative

.tabs__content
  width: 100%
  transition: transform 0.4s cubic-bezier(0.86, 0, 0.07, 1)
