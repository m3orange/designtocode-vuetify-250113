.datatable
  thead
    th
      color: rgba(#000, .54)
      white-space: nowrap
      cursor: pointer
      user-select: none
      transition: .3s $transition.swing
      
      &:not(:first-child)
        transform: translateX(-16px)

        i
          color: rgba(#000, .38)
          font-size: 16px
          vertical-align: sub
          display: inline-block
          opacity: 0
      
      &:hover
        color: rgba(#000, .87)

      &.active
        transform: none
        color: rgba(#000, .87)

        i
          color: rgba(#000, .87)
          opacity: 1
          transition: .3s $transition.swing
        
        &.desc
          i
            transform: rotate(-180deg)

/** Actions */
.datatable__actions
  color: rgba(#000, .54)
  display: flex
  justify-content: flex-end
  align-items: center
  font-size: 12px
  
  .btn
    color: inherit

  &__pagination
    text-align: center
    margin: 0 32px
    
  &__select
    display: flex
    align-items: center
    justify-content: center
    
    .input-group--select
      margin-left: 40px
      
      .input-group__selections__comma
        color: rgba(#000, .54) !important
        font-size: 12px
        padding-top: 6px
        
      .input-group__append-icon
        color: rgba(#000, .54) !important