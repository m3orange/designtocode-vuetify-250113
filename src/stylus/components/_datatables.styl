.datatable
  thead
    th
      white-space: nowrap
      cursor: pointer
      user-select: none
      transition: .3s $transition.swing
      
      &:not(:first-child)
        transform: translateX(-16px)

        i
          font-size: 16px
          vertical-align: sub
          display: inline-block
          opacity: 0
      
      &.active
        transform: none
        color: rgba(#000, .87)

        i
          opacity: 1

/** Actions */
.datatable__actions
  display: flex
  justify-content: flex-end
  height: 56px
  align-items: center
  