@import '../bootstrap'
@import '../theme'

/** Theme */
switch($material)
  &:not(.v-input-group--dirty)
    .v-input-group--selection-controls__container
      // Must overwrite color helpers
      color: $material.selection-controls.track.inactive !important

  .v-input-group--selection-controls__ripple
    &:after
      background-color: $material.selection-controls.thumb.inactive

    &:not(.v-input-group--selection-controls__ripple--active)
      color: $material.selection-controls.track.inactive

    &--active:after
      background-color: currentColor

  .v-input-group--selection-controls__toggle
    color: $material.selection-controls.track.inactive

    &--active
      color: inherit

  &.v-input-group--disabled
    .v-input-group--selection-controls__ripple
      &:after
        background-color: $material.selection-controls.thumb.disabled !important

    .v-input-group--selection-controls__toggle
      color: $material.selection-controls.track.disabled !important

theme(switch, "switch")

.v-input-group.v-input-group--selection-controls
  z-index: 0

  &.switch
    &.v-input-group--prepend-icon, &.v-input-group--append-icon
      label
        left: 62px

    &.v-input-group--prepend-icon
      .v-input-group--selection-controls__container
        margin-left: 6px

    &.v-input-group--append-icon
      .v-input-group__append-icon
        left: 40px

    .v-input-group--selection-controls__container
      color: inherit
      position: relative
      width: 36px

      &[class*="--text"]
        .v-input-group--selection-controls__ripple--active:after
          background-color: currentColor

    .v-input-group--selection-controls__toggle
      background-color: currentColor
      color: inherit
      position: absolute
      height: 14px
      top: 50%
      left: 0
      width: 34px
      border-radius: 8px
      transform: translateY(-50%)

      &.v-input-group--selection-controls__toggle--active
        opacity: .5

    .v-input-group--selection-controls__ripple
      transform: translate(-15px, -24px)
      transition: .3s $transition.fast-in-fast-out
      z-index: 1
      left: 0

      &:after
        content: ''
        position: absolute
        display: inline-block
        cursor: pointer
        width: 20px
        border-radius: 50%
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        height: 20px
        elevation(4)

      &--active
        transform: translate(2px, -24px)

    label
      padding-left: 14px
