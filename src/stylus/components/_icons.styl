@import '../bootstrap'

.v-icon
  align-items: center
  display: inline-flex
  font-feature-settings: 'liga'
  font-size: 24px
  justify-content: center
  line-height: 1
  transition: $primary-transition
  vertical-align: middle
  color: var(--vuetify-icon-active)

  &.v-icon--disabled:not(.input-group__append-icon)
    color: var(--vuetify-icon-inactive) !important

  &--link
    cursor: pointer

  &.v-icon--large
    font-size: 2.5rem

  &.v-icon--medium
    font-size: 2rem

  &.v-icon--x-large
    font-size: 3rem

  &.v-icon--disabled
    pointer-events: none
