@import '../bootstrap'
@import '../theme'

/* Theme */
v-input-group($material)
  input,
  textarea
    color: $material.text.primary

    &:disabled
      color: $material.text.disabled

  &:not(.v-input-group--error) .v-input-group__messages
    color: $material.text.secondary

  &.v-input-group--textarea:not(.v-input-group--full-width)
    .v-input-group__input
      border: 2px solid $material.text.secondary

  &.v-input-group--solo
    background: $material.cards

  &.v-input-group--solo-inverted
    background: rgba($material.inputs.solo-inverted)

    &.v-input-group--focused
      background: rgba($material.inputs.solo-inverted-focused)

      .v-input-group__append-icon,
      .v-input-group__prepend-icon,
      input,
      label
          color: $material.inputs.solo-inverted-focused-text

  // This is specific for selects
  &.v-input-group--dirty
    .v-input-group__selections__comma
      &:not(.v-input-group__selections__comma--active)
        color: $material.text.primary

  &:not(.v-input-group--error)
    label
      color: $material.text.secondary

    &.v-input-group--disabled
      label,
      .v-input-group__selections__comma
        color: $material.text.disabled

    .v-input-group__details:before
      background-color: $material.input-bottom-line

    &:not(.v-input-group--focused):not(.v-input-group--disabled)
      .v-input-group__input
        .v-input-group__append-icon,
        .v-input-group__prepend-icon
          &:not(:hover)
            color: $material.text.secondary

      &:not(.v-input-group--disabled):not(.v-input-group--overflow):not(.v-input-group--segmented):not(.v-input-group--editable):hover
        .v-input-group__details:before
          background-color: $material.text.primary

        &.v-input-group--textarea:not(.v-input-group--full-width)
          .v-input-group__input
            border-color: $material.text.primary

  &.v-input-group
    &--overflow, &--segmented, &--editable
      .v-input-group__input,
      .v-input-group__details
        &:before
          background-color: $material.dividers

  &.v-input-group--disabled
    .v-input-group__input
      .v-input-group__append-icon,
      .v-input-group__prepend-icon
        color: $material.text.disabled

    .v-input-group__details:before
      background-color: transparent
      background-image: linear-gradient(
        to right,
        $material.text.disabled 0,
        $material.text.disabled 33%,
        transparent 0
      )

  .v-input-group--text-field
    &__prefix, &__suffix
      color: $material.text.secondary

    &.v-input-group--disabled
      &__prefix, &__suffix
        color: $material.text.disabled

theme(v-input-group, "v-input-group")

.v-input-group
  display: flex
  flex: 1 1
  flex-wrap: wrap
  min-width: 24px
  padding: $input-group-padding
  position: relative
  width: 100%
  outline: none
  transition: box-shadow $primary-transition

/** Input */
.v-input-group
  input
    width: 100%

/** Label */
.v-input-group
  label
    display: inline-block
    font-size: $input-font-size
    line-height: $input-height
    height: $input-height
    max-width: 90%
    min-width: 0
    overflow: hidden
    pointer-events: none
    text-align: left
    text-overflow: ellipsis
    transform-origin: top left
    transition: .4s $transition.fast-in-fast-out
    white-space: nowrap
    width: 100%
    z-index: 0

/** Blocks */
.v-input-group
  &__input
    display: flex
    flex: 1 0 100%
    min-width: 0
    min-height: $input-height

/** Icons */
.v-input-group
  &__icon-cb
    cursor: pointer

.v-input-group
  &.v-input-group--focused,
  &.v-input-group--error
    .v-input-group__append-icon,
    .v-input-group__prepend-icon
      color: inherit

  &.v-input-group--append-icon, &.v-input-group--selection-controls
    label
      max-width: 75%

  &.v-input-group--prepend-icon
    label
      max-width: 75%

  &.v-input-group--append-icon.v-input-group--prepend-icon
    label
      max-width: 65%

  .v-input-group__append-icon
    padding: 0 6px

  .v-input-group__append-icon,
  .v-input-group__prepend-icon
    align-self: center
    user-select: none

/** States */
.v-input-group
  // Single Line
  &.v-input-group--single-line,
  &.v-input-group--solo
    &.v-input-group--dirty
      label
        display: none

  // Solo
  &.v-input-group--solo
    min-height: 46px
    border-radius: $card-border-radius
    padding: 0
    transition: $primary-transition
    elevation(2)

    label
      top: 8px
      padding-left: 16px
      transform: none !important

    .v-input-group__input
      align-items: center
      padding: 8px 16px

    .v-input-group__details
      display: none

  &--disabled
    pointer-events: none

    .v-input-group__details:before
      background-color: transparent
      background-position: bottom
      background-size: 3px 1px
      background-repeat: repeat-x

  // Focused
  &.v-input-group--text-field
    &:not(.v-input-group--single-line):not(.v-input-group--error)
      &.v-input-group--focused
        label
          color: inherit

        .v-input-group__input
          border-color: inherit

    &.v-input-group--focused
      &:not(.v-input-group--disabled)
        .v-input-group__details
          &:after
            transform: scaleX(1)

  // Required
  &--required
    label:after
      content: '*'

  // Error
  &.v-input-group--error
    label
      animation: shake .6s $transition.swing

    .v-input-group__messages
      color: inherit

    .v-input-group__details
      &:before
        background-color: currentColor

/** Details */
.v-input-group
  .slide-y-transition-leave,
  .slide-y-transition-leave-to
    position: absolute

  &__details
    color: inherit
    display: flex
    padding-top: 4px
    flex: 1 0 100%
    font-size: 12px
    min-height: 26px
    overflow: hidden
    position: relative
    width: 100%

    &:after, &:before
      content: ''
      position: absolute
      left: 0
      transition: .3s $transition.fast-out-slow-in

    &:after
      background-color: currentColor
      color: inherit
      top: 0
      height: 2px
      transform: scaleX(0)
      transform-origin: center center 0
      width: 100%
      z-index: 1

    &:before
      top: 0
      height: 1px
      width: 100%
      z-index: 0

  &--hide-details
    .v-input-group__details
      min-height: 2px
      padding: 0

  &--async-loading
    .v-input-group__details
      &:before,
      &:after
        display: none

  /** Async loading indicator */
  .progress-linear
    position: absolute
    top: 0
    left: 0
    margin: 0

/** Hint */
.v-input-group
  &__hint
    // flex: 1 0
    transition: .3s $transition.fast-in-fast-out

/** Error */
.v-input-group
  &__error
    color: inherit
    transition: .3s $transition.fast-in-fast-out

/** Types */
.v-input-group
  &--overflow,
  &--segmented,
  &--editable
    &.v-input-group--active
      background-color: #fff
