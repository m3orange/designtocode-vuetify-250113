@import '../bootstrap'

.v-small-dialog
  display: block
  width: 100%
  height: 100%

  &__content
    padding: 0 24px
    background: var(--vuetify-cards-color)

  &__actions
    text-align: right
    background: var(--vuetify-cards-color)

  a
    display: flex
    align-items: center

    height: 100%
    text-decoration: none
    color: var(--vuetify-small-dialog-link-color)

    > *
      width: 100%

  .v-menu__activator
    height: 100%
