@import '../bootstrap'
@import '../theme'

radiogroup($material)
  .v-input-group--selection-controls
    //

theme(radiogroup, "radio-group")

.radio-group
  .v-input-group__details:before, .v-input-group__details:after
    display: none

  .v-input-group
    padding: 0

  &--column
    .v-input-group__input
      display: block

  &--row
    .v-input-group__input
      flex-direction: row

  &.v-input-group--error
    .radio
      label,
      .v-icon--selection-control
        color: inherit
